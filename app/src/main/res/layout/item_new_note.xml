<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_new_note">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivUser"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="8dp"
        tools:background="@color/dark" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextH2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:ems="3"
        android:maxLines="1"
        android:text="Школа разработки 2022"
        app:layout_constraintBottom_toTopOf="@+id/tvDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivUser"
        app:layout_constraintTop_toTopOf="@+id/ivUser"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvDate"
        style="@style/TextH3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:ems="3"
        android:maxLines="1"
        android:text="Понедельник, 16:00 - 18:00 первое занятие"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/ivUser"
        app:layout_constraintEnd_toEndOf="@+id/tvTitle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvDescription"
        style="@style/TextH3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:ellipsize="end"
        android:ems="3"
        android:maxLines="1"
        android:text="Первое занятие школы разработки, не пропусти"
        app:layout_constraintEnd_toEndOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="@+id/ivUser"
        app:layout_constraintTop_toBottomOf="@+id/ivUser" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivUser1"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_test_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvDescription"
        app:riv_corner_radius="11dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivUser2"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="-11dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_test_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivUser1"
        app:riv_border_color="@color/dark"
        app:riv_border_width="1dp"
        app:riv_corner_radius="11dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivUser3"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="-11dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_test_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivUser2"
        app:riv_border_color="@color/dark"
        app:riv_border_width="1dp"
        app:riv_corner_radius="11dp" />

</androidx.constraintlayout.widget.ConstraintLayout>