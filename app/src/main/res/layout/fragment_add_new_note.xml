<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"

    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    tools:context=".ui.add_new.AddNewNote">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:src="@drawable/ic_back"
        app:layout_constraintEnd_toStartOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:text="@string/newNote"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toTopOf="@+id/back" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddNote"
        style="@style/TextH1"
        android:layout_width="169dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_button_active"
        android:enabled="true"
        android:padding="12dp"
        android:text="@string/note"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back" />

    <Button
        android:id="@+id/btnAddTask"
        style="@style/TextH1"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_button_passive"
        android:enabled="true"
        android:padding="8dp"
        android:text="@string/task"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/btnAddNote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnAddNote"
        app:layout_constraintTop_toTopOf="@+id/btnAddNote"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/noteContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAddNote">

        <TextView
            style="@style/TextH2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noteName" />


        <EditText
            android:id="@+id/etEnterTitle"
            style="@style/TextH3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autofillHints="username"
            android:background="@drawable/bg_login_edit_text"
            android:padding="12dp"
            android:hint="@string/startInputText"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            tools:ignore="TextFields" />

        <TextView
            style="@style/TextH2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/noteDesc" />


        <EditText
            android:id="@+id/EnterDesc"
            style="@style/TextH3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autofillHints="username"
            android:background="@drawable/bg_login_edit_text"
            android:padding="12dp"
            android:hint="@string/startInputText"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            tools:ignore="TextFields" />

        <TextView
            android:id="@+id/tvDeadLine"
            android:visibility="gone"
            style="@style/TextH2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/deadLine" />


        <EditText
            android:id="@+id/setDeadLine"
            android:visibility="gone"
            style="@style/TextH3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autofillHints="username"
            android:background="@drawable/bg_login_edit_text"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            tools:ignore="TextFields" />

        <TextView
            android:id="@+id/tvFriends"
            android:visibility="visible"
            style="@style/TextH2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/Friends" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpFriends"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_marginTop="12dp" />

        <CalendarView
            android:id="@+id/calendarView"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCreate"
        style="@style/TextH1"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/bg_button"
        android:enabled="true"
        android:padding="8dp"
        android:text="@string/createNote"
        android:textAllCaps="true"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>